{
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "~*": ["./*"]
    },
    "target": "es2017",
    "lib": [
      "es2019",
      "dom"
    ],
    "types": ["svelte"],
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
